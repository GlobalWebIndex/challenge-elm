{
    "pruga.showLevel": "warning",
    "pruga.livereload.port": 35729,
    "pruga.livereload.autoStart": true,
    "pruga.server.web": "http://localhost/challenge-elm",
    "pruga.watch.buildedWeb": "./build/dev/**/*",
    "pruga.compile.elm": "elm make ./src/Main.elm --yes --output ./build/dev/scripts/app.js",
    "pruga.compile.php": "php ./src/index.php --debug --typescript >  ./build/dev/index.html",
    "pruga.compile.typescript": "tsc ./src/scripts/index.ts --outFile  ./build/dev/scripts/index.js",
    "pruga.clean": "rm -r ./build/dev/*",
    "pruga.elm.test": "elm-test",
    "pruga.copy.static": [
        "cp ./src/static/favicon.ico ./build/dev/favicon.ico"
    ]
}